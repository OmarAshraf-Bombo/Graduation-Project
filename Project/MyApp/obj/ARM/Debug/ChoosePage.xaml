<Page
    x:Class="MyApp.ChoosePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    FlowDirection="RightToLeft"
    mc:Ignorable="d">


    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="Assets/maximum.png"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="27*"/>
            <RowDefinition Height="18*"/>
            <RowDefinition Height="30*"/>
        </Grid.RowDefinitions>
        <TextBlock x:ConnectionId='1' FontFamily="Andalus" FontSize="80" Foreground="White" x:Name="textBlock" Grid.Column="1" HorizontalAlignment="Left" Margin="53,10,0,0" TextWrapping="Wrap" Text="اسم المشروع" VerticalAlignment="Top" Height="124" Width="364"/>
        <TextBlock x:ConnectionId='2' FontSize="35" Foreground="White" x:Name="textBlock1" HorizontalAlignment="Left" Margin="10,10,0,0" Grid.Row="1" TextWrapping="Wrap" Text="اذا كنت ترغب في عمل طلب جديد اضغط هنا" VerticalAlignment="Top" Height="124" Width="834" Grid.ColumnSpan="2" Grid.RowSpan="2"/>
        <TextBlock x:ConnectionId='3' FontSize="35" Foreground="White" x:Name="textBlock1_Copy" HorizontalAlignment="Left" Margin="10,10,0,0" Grid.Row="3" TextWrapping="Wrap" VerticalAlignment="Top" Height="124" Width="834" Grid.ColumnSpan="2" Grid.RowSpan="2">
        	<Span>
        		<Run Text="اذا كنت ترغب في "/>
        	</Span>
        	<Span>
        		<Run Text=" استلام طلبك اضغط هنا"/>
        	</Span>
        </TextBlock>
        <Button x:ConnectionId='4' FontSize="40" Foreground="White" x:Name="button" Content="عمل طلب" HorizontalAlignment="Left" Grid.Row="2" VerticalAlignment="Top" Height="80" Width="417" Grid.Column="1"                     >
            <Button.Background>
                <ImageBrush Stretch="Fill" ImageSource="Assets/minimum.png"/>
            </Button.Background>
        </Button>
        <Button x:ConnectionId='5' FontSize="40" Foreground="White" x:Name="button_Copy" Content="استلام الطلب" HorizontalAlignment="Left" Grid.Row="4" VerticalAlignment="Top" Height="80" Width="427" Grid.Column="1"                          >
            <Button.Background>
                <ImageBrush Stretch="Fill" ImageSource="Assets/minimum.png"/>
            </Button.Background>
        </Button>
    </Grid>

</Page>

